<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_selector"
    >
    <TextView
        android:id="@+id/item_BudgetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:minEms="20"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_BudgetName">
        <TextView
            android:id="@+id/item_BudgetAllocated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:gravity="center"
            android:minEms="10"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/item_BudgetAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:gravity="center"
            android:minEms="10"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorHighFullFunds"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/item_BudgetSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minEms="10"
            android:layout_weight="1"
            android:background="@drawable/list_selector"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorLowFunds"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>