<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/OptionsTopText1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/IncomeTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="@string/OptionsIncomeText1"
        android:background="#b4bbe4"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/IncomeTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IncomeTextTitle"
        android:background="#b4bbe4"
        android:gravity="center"
        android:text="$1000000000.00"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@id/IncomeTextField"
        android:background="#b4bbe4"
        android:text="@string/OptionsDeductionsText1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/DeductionTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:background="#b4bbe4"
        android:text="$0000.00"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#b4bbe4"
        android:layout_below="@id/DeductionTextField"
        android:text="@string/OptionsNetIncomeText1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/NetAmountTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b4bbe4"
        android:layout_below="@+id/textView16"
        android:text="$0000.00"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/OptionsInputIncomeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/NetAmountTextField"
        android:text="@string/OptionsInputIncomeTitleText"
        android:textAlignment="center"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/IncomeInputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OptionsInputIncomeTitleText"
        android:ems="7"
        android:hint="@string/OptionsIncomeInputText"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/DeductionsInputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OptionsInputIncomeTitleText"
        android:layout_alignParentRight="true"
        android:ems="7"
        android:hint="@string/OptionsDeductionsInputText"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IncomeInputField"
        android:text="@string/OptionsIncomeTooltip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@id/textView22"
        android:text="@string/OptionsDeductionsTooltip"
        android:textSize="12sp" />

    <Button
        android:id="@+id/SaveOptionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView21"
        android:text="@string/OptionsSaveButtonText" />
</RelativeLayout>