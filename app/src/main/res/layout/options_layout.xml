<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c2033"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/OptionsTopText1"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/IncomeTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:background="#27304b"
        android:text="@string/OptionsIncomeText1"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/IncomeTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IncomeTextTitle"
        android:background="#27304b"
        android:gravity="center"
        android:text="$0000.00"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IncomeTextField"
        android:layout_marginTop="1dp"
        android:background="#27304b"
        android:textColor="#ffffff"
        android:text="@string/OptionsDeductionsText1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/DeductionTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:background="#27304b"
        android:text="$0000.00"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/DeductionTextField"
        android:layout_marginTop="1dp"
        android:background="#27304b"
        android:textColor="#ffffff"
        android:text="@string/OptionsNetIncomeText1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/NetAmountTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:background="#27304b"
        android:textColor="#ffffff"
        android:text="$0000.00"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/OptionsInputIncomeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NetAmountTextField"
        android:layout_marginTop="1dp"
        android:textColor="#ffffff"
        android:text="@string/OptionsInputIncomeTitleText"
        android:textAlignment="center"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/IncomeInputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OptionsInputIncomeTitleText"
        android:ems="7"
        android:backgroundTint="#ffffff"
        android:textColorHint="#505050"
        android:hint="@string/OptionsIncomeInputText"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/DeductionsInputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/OptionsInputIncomeTitleText"
        android:ems="7"
        android:backgroundTint="#ffffff"
        android:textColorHint="#505050"
        android:hint="@string/OptionsDeductionsInputText"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IncomeInputField"
        android:textColor="#ffffff"
        android:text="@string/OptionsIncomeTooltip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView22"
        android:layout_marginTop="1dp"
        android:textColor="#ffffff"
        android:text="@string/OptionsDeductionsTooltip"
        android:textSize="12sp" />

</RelativeLayout>